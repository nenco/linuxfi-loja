<html>
  <head>
    <title>Loja - <%= @titulo %> </title>
    <%= yield :stylesheets %>



  </head>
  <body>
    <h1>Loja - <%= yield :cabecalho %>  | Loja </h1>

    <%  unless flash.blank? %>
      <%flash.each do |key,value| %>
        <p class="flash_<%= key %>"> <%= value %> </p>
      <%end%>
    <% end %>

    <ul>
      <li><%= link_to 'Produtos', produtos_path %></li>
        <%  unless pedido_atual.blank? %>
        <li>
          <%=  link_to( "Veja valor no seu carrinho", itens_path) %>
        </li>
      </ul>



    <%end%>

    <%= yield %>

  </body>
</html>